<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<h1>Register</h1>

<form action="/auth/register" method="POST" class="mt-4 w-1/2">
  <div class="mb-3">
    <label for="username" class="form-label">Username</label>
    <input type="text" name="username" id="username" class="form-control" required>
  </div>

  <div class="mb-3">
    <label for="password" class="form-label">Password</label>
    <input type="password" name="password" id="password" class="form-control" required>
  </div>

  <button type="submit" class="bg-book-primary hover:bg-book-dark text-white px-6 py-2 mb-2 rounded-lg transition-all duration-200 flex items-center gap-2 font-medium shadow-md hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-book-primary focus:ring-offset-2">Register</button>
</form>

<p class="mt-3">Already have an account? <a href="/auth/login">Login here</a>.</p>
