{{> search-controls}}
<div class="mb-6">
    <h2 class="text-2xl font-bold text-book-dark mb-6 flex items-center">
        <i class="fas fa-books mr-3"></i>
        Your Book Collection
        <span class="ml-3 text-sm bg-book-secondary text-white px-3 py-1 rounded-full">{{bookCount}} book{{#unless (eq bookCount 1)}}s{{/unless}}</span>
    </h2>
    
    {{#if hasBooks}}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        {{#each books}}
            {{> book-card currentUser=../currentUser}}
        {{/each}}
    </div>
    {{else}}
    <div class="text-center py-12">
        <i class="fas fa-book-open text-6xl text-gray-300 mb-4"></i>
        <h3 class="text-xl text-gray-500 mb-2">
            {{#if searchTerm}}No books found{{else}}No books in your collection{{/if}}
        </h3>
        <p class="text-gray-400">
            {{#if searchTerm}}
                Try searching with different keywords or <a href="/" class="text-book-primary hover:underline">view all books</a>
            {{else}}
                Start building your collection by adding your first book!
            {{/if}}
        </p>
    </div>
    {{/if}}
</div>