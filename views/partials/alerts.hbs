{{#if success}}
<div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6" role="alert">
    <div class="flex items-center">
        <i class="fas fa-check-circle mr-2"></i>
        <span>
            {{#if (eq success 'added')}}Book added successfully!{{/if}}
            {{#if (eq success 'updated')}}Book updated successfully!{{/if}}
            {{#if (eq success 'deleted')}}Book deleted successfully!{{/if}}
        </span>
    </div>
</div>
{{/if}}

{{#if error}}
<div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6" role="alert">
    <div class="flex items-center">
        <i class="fas fa-exclamation-circle mr-2"></i>
        <span>
            {{#if (eq error 'missing_fields')}}Please fill in all required fields.{{/if}}
        </span>
    </div>
</div>
{{/if}}