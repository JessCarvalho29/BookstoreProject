<div class="bg-white rounded-lg shadow-md overflow-hidden transition-all duration-300 hover:shadow-xl hover:-translate-y-1 transform">
    <div class="relative">
        <img 
            src="{{coverUrl}}" 
            alt="{{title}} cover"
            class="w-full h-48 object-cover transition-opacity duration-300"
            onerror="this.src='https://images.pexels.com/photos/1029141/pexels-photo-1029141.jpeg?auto=compress&cs=tinysrgb&w=300'"
        >
        <div class="absolute top-2 right-2 bg-book-primary text-white px-2 py-1 rounded text-sm font-medium">
            ${{formatPrice price}}
        </div>
    </div>
    
    <div class="p-4">
        <h3 class="font-bold text-lg text-book-dark mb-1 line-clamp-2">{{title}}</h3>
        <p class="text-book-secondary mb-2 font-medium">by {{author}}</p>
        <p class="text-gray-600 text-sm mb-3 line-clamp-3">{{quantity}} in stock</p>
        
        {{#if description}}
        <p class="text-gray-600 text-sm mb-3 line-clamp-3">{{description}}</p>
        {{/if}}
        
        <div class="text-xs text-gray-400 mb-3">Added: {{formatDate dateAdded}}</div>
        
        {{#if currentUser}}
        <div class="flex gap-2">
            <a 
                href="books/edit/{{_id}}"
                class="flex-1 bg-book-secondary hover:bg-book-accent text-white px-3 py-2 rounded transition-all duration-200 text-sm font-medium flex items-center justify-center gap-1 no-underline focus:outline-none focus:ring-2 focus:ring-book-secondary focus:ring-offset-2"
            >
                <i class="fas fa-edit"></i>
                Edit
            </a>
            <button 
                data-id="{{_id}}"
                data-title="{{title}}"
                onclick="showDeleteModal(this)"
                class="flex-1 bg-red-500 hover:bg-red-600 text-white px-3 py-2 rounded transition-all duration-200 text-sm font-medium flex items-center justify-center gap-1 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2"
            >
                <i class="fas fa-trash"></i>
                Delete
            </button>
        </div>
        {{/if}}
    </div>
</div>