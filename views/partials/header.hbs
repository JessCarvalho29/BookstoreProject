<header class="bg-book-primary shadow-lg">
  <div class="container mx-auto px-4 py-6 flex justify-between items-center">
    <div>
      <h1 class="text-3xl font-bold text-white flex items-center">
        <i class="fas fa-book-open mr-3"></i>
        <a href="/" class="text-book-light no-underline">Cozy Chapters Corner</a>
      </h1>
      <p class="text-book-light mt-2">Manage your bookstore inventory</p>
    </div>

    {{#unless currentUser}}
    <div class="flex flex-col sm:flex-row justify-center gap-4">
      <a href="/auth/register" class="btn text-book-light btn-lg px-6 py-3 text-lg font-medium">Register</a>
      <a href="/auth/login" class="btn text-book-light btn-lg px-6 py-3 text-lg font-medium">Sign In</a>
    </div>
    {{/unless}}

    {{#if currentUser}}
    <div class="flex flex-col sm:flex-row justify-center gap-4">
      <a href="/auth/logout" class="btn text-book-light btn-lg px-6 py-3 text-lg font-medium">Logout</a>
    </div>
    {{/if}}
  </div>
</header>
