<div class="bg-white rounded-lg shadow-md p-6 mb-8">
  <div class="flex flex-col lg:flex-row gap-4 items-center justify-between w-full">
    
    <form method="GET" action="/books" class="flex flex-1 w-full lg:w-auto relative">
      <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
      <input 
        type="text" 
        name="search" 
        value="{{searchTerm}}" 
        placeholder="Search books by title or author..."
        class="w-full lg:w-80 pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-book-secondary focus:border-transparent transition-all focus:outline-none"
      >
      
      <button 
        type="submit"
        class="ml-4 px-4 py-2 bg-book-primary hover:bg-book-dark text-white rounded-lg transition duration-200 font-medium"
      >
        Search
      </button>

      {{#if searchTerm}}
        <a 
          href="/books"
          class="ml-2 px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-700 rounded-lg transition duration-200 font-medium no-underline"
        >
          Reset
        </a>
      {{/if}}
    </form>

    {{#if currentUser}}
    <a 
      href="/books/add" 
      class="w-full lg:w-auto text-center bg-book-primary hover:bg-book-dark text-white px-6 py-2 rounded-lg transition-all duration-200 flex items-center justify-center gap-2 font-medium shadow-md hover:shadow-lg transform hover:-translate-y-0.5 no-underline focus:outline-none focus:ring-2 focus:ring-book-primary focus:ring-offset-2"
    >
      <i class="fas fa-plus"></i>
      Add New Book
    </a>
    {{/if}}
  </div>
</div>
